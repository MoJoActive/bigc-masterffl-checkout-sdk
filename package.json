{
  "name": "bigc-masterffl-checkout-sdk",
  "version": "1.0.1",
  "description": "BigCommerce MasterFFL Checkout SDK - A React component library for BigCommerce FFL dealer selection",
  "type": "module",
  "exports": {
    "./checkout": {
      "types": "./dist/types/bigcommerce/custom-checkout/index.d.ts",
      "import": "./dist/bigc-masterffl-sdk.checkout.es.js",
      "require": "./dist/bigc-masterffl-sdk.checkout.umd.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "checkout": [
        "dist/types/bigcommerce/custom-checkout/index.d.ts"
      ],
      "standalone": [
        "dist/types/bigcommerce/standalone/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "concurrently \"npm run watch\" \"npx serve dist\"",
    "build": "npm run build:checkout && npm run build:standalone",
    "build:checkout": "vite build --config vite.checkout.config.ts && tsc --emitDeclarationOnly",
    "build:standalone": "vite build --config vite.standalone.config.ts && tsc --emitDeclarationOnly",
    "publish": "npm run build && npx yalc publish",
    "push": "npx yalc push",
    "watch": "nodemon --watch src --ext ts,tsx --exec 'npm run build && npx yalc push'",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "@bigcommerce/checkout-sdk": "^1.238.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.15",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "yalc": "^1.0.0-pre.53",
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^12.0.0",
    "conventional-changelog-conventionalcommits": "^7.0.2"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.14"
  },
  "keywords": [
    "react",
    "bigcommerce",
    "ffl",
    "dealer",
    "sdk"
  ],
  "author": "Your Name",
  "license": "MIT"
}
